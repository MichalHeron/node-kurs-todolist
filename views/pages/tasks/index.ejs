<h1 class="mb-5">Lista tasków</h1>

<% tasks.forEach(task => { %>
<div class="card bg-light">
  <div class="card-body">
    <label>
      Ukończone: <input type="checkbox" checked 
      <%= task.done ? 'enabled' : 'disabled'  %>
      >
    </label>
    <p class="h5"> <%=task.title %> </p>
    <p class="text-muted"><%=task.description %></p>

    <a href="/zadania/<%=task.id%>/edytuj" class="btn btn-warning">Edytuj</a>
    <a href="/zadania/<%=task.id%>/usun" class="btn btn-danger">Usuń</a>

    <form action="/zadania/<%=task.id%>/zmien-stan" method="POST" class="d-inline">
      <button class="btn btn-success">Oznacz jako ukończone</button>
    </form>
  </div>
</div>

<%}) %>

<a href="/zadania/dodaj" class="btn btn-primary mt-5">Dodaj nowe zadanie</a>